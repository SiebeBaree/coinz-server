{
    "compilerOptions": {
        "module": "CommonJS",
        "noImplicitReturns": true,
        "noUnusedLocals": true,
        "noImplicitAny": false,
        "outDir": "lib",
        "sourceMap": true,
        "strict": true,
        "target": "ES2021",
        "lib": [
            "ESNext"
        ],
        "strictNullChecks": false,
        "esModuleInterop": true
    },
    "compileOnSave": true,
    "include": [
        "src"
    ]
}