{
    "compilerOptions": {
        "module": "CommonJS",
        "target": "ES2016",
        "noImplicitReturns": true,
        "noUnusedLocals": true,
        "noImplicitAny": false,
        "outDir": "dist",
        "rootDir": "./src",
        "sourceMap": true,
        "strict": true,
        "strictNullChecks": false,
        "resolveJsonModule": true,
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "skipLibCheck": true,
        "moduleResolution": "node",
    },
    "compileOnSave": true,
    "include": [
        "src"
    ]
}